{
  "name": "sparks-nmn-desktop",
  "version": "0.4.2",
  "description": "Desktop application of SparksNMN, a natural text format for composing numbered music notation scores.",
  "author": "yezhiyi9670",
  "license": "MIT",
  "main": "dist/main/index.js",
  "targets": {
    "main": false
  },
  "staticFiles": [
    {
      "staticPath": "public/static",
      "staticOutPath": "static",
      "env": {
        "ELECTRON_COMPONENT": "renderer"
      }
    },
    {
      "staticPath": "src/renderer/nmn/font",
      "staticOutPath": "nmn/font",
      "env": {
        "ELECTRON_COMPONENT": "renderer"
      }
    }
  ],
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.0.0",
    "eslint": "^8.34.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "focus-trap-react": "^10.0.2",
    "immer": "^9.0.19",
    "parcel": "^2.8.3",
    "parcel-reporter-static-files-copy": "^1.5.0",
    "process": "^0.11.10",
    "react-icons": "^4.7.1",
    "react-jss": "^10.10.0",
    "typescript": "^4.9.5",
    "use-immer": "^0.8.1"
  },
  "scripts": {
    "start": "concurrently npm:start:renderer npm:start:main",
    "start:renderer": "cross-env ELECTRON_COMPONENT=renderer parcel --no-hmr --port 8497 --dist-dir dist/public-dev/ --public-url / public/template.html",
    "start:main": "node config/compile.mjs && electron .",
    "clean": "node config/clean.mjs",
    "build": "npm run clean && npm run build:renderer && npm run build:main",
    "build:renderer": "cross-env ELECTRON_COMPONENT=renderer parcel build --dist-dir dist/public/ --public-url ./ public/template.html",
    "build:main": "node config/compile.mjs",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make"
  },
  "dependencies": {
    "@types/jquery": "^3.5.16",
    "ace-builds": "^1.15.1",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.6.3",
    "react": "^18.2.0",
    "react-ace": "^10.1.0",
    "react-dom": "^18.2.0"
  }
}
